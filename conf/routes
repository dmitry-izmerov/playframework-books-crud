# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET           /                         controllers.HomeController.index

GET           /books                    controllers.BooksController.getAll
GET           /books/:id                controllers.BooksController.getBookById(id: Integer)
POST          /books                    controllers.BooksController.createBook
PUT           /books/:id                controllers.BooksController.saveBook(id: Integer)
DELETE        /books/:id                controllers.BooksController.deleteBook(id: Integer)
GET           /books/:id/details        controllers.BooksController.getBookDetails(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
